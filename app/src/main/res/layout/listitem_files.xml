<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fileIcon"
        android:layout_width="@dimen/file_list_item_icon_size"
        android:layout_height="@dimen/file_list_item_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/file_list_item_icon_padding"
        android:src="@drawable/ic_file_fl"/>

    <TextView
        android:id="@+id/fileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fileIcon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fileIcon"
        android:layout_toRightOf="@+id/fileIcon"
        android:gravity="left|center"
        android:minHeight="@dimen/general_min_height"
        android:padding="@dimen/general_padding"
        android:text="@string/default_text"
        android:textSize="@dimen/file_list_item_text_size"/>

</RelativeLayout>
